#include <stdio.h>

int main (){

    // variáveis carta 01
    char estado1[20], codigo1[5], cidade1[20];
    int populacao1, pontoTuris1;    
    float area1, pib1;
    
    // variáveis carta 02
    char estado2[20], codigo2[5], cidade2[20];
    int populacao2, pontoTuris2;  
    float area2, pib2;

    printf("-----------Carta 01-----------\n");
    printf("Digite o Estado?: ");
    scanf("%s", estado1);
    printf("Digite o Código?: ");
    scanf("%4s", codigo1);
    printf("Digite o nome da cidade?: ");
    scanf (" %29[^\n]", cidade1);
    printf("Qual a População?: ");
    scanf("%d", &populacao1);
    printf("Digite a área da primeira cidade (em km²): ");
    scanf("%f", &area1);
    printf("Digite o PIB da primeira cidade (em bilhões de reais): ");
    scanf("%f", &pib1);
    printf("Número de pontos Turísticos?: ");
    scanf("%d", &pontoTuris1);

    printf("\n-----------Carta 02-----------\n");
    
    printf("Digite o Estado?: ");
    scanf("%s", estado2);                        
    printf("Digite o Código?: ");
    scanf("%s", codigo2);
    printf("Digite o nome da cidade?: ");
    scanf(" %29[^\n]", cidade2);
    printf("Qual a População?: ");
    scanf("%d", &populacao2);
    printf("Qual é a Área (em km²)?: ");
    scanf("%f", &area2);
    printf("Qual é o Pib(em bilhões)?: ");
    scanf("%f", &pib2);
    printf("Número de pontos Turísticos?: ");
    scanf("%d", &pontoTuris2);

    printf("Carta 01\n");
    printf("Estado: %s\n", estado1);
    printf("Código: %s\n", codigo1);
    printf("Cidade: %s\n", cidade1);
    printf("População: %d\n", populacao1);
    printf("Área em KM: %.2f\n", &area1);
    printf("PIB: %.2f\n", pib1 );
    printf("Pontos turísticos: %d\n", pontoTuris1);

    printf("Carta 02\n");
    printf("Estado: %s\n", estado2);
    printf("Código: %s\n", codigo2);
    printf("Cidade: %s\n", cidade2);
    printf("População: %d\n", populacao2);
    printf("Área em km²: %.2f \n", area2);
    printf("PIB: %.2f bilhões de reais\n", pib2 );
    printf("Pontos turísticos: %d\n", pontoTuris2);


    return 0;

}
